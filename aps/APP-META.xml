    <presentation>
      <name>Composr</name>
      <summary>Composr CMS</summary>
      <infolinks>
        <link class="official" href="http://compo.sr">Official Site</link>
        <link class="support" href="http://ocportal.com/site/support.htm">Composr Support</link>
      </infolinks>
      <entry-points>
        <entry class="frontpage" dst="/index.php?page=login&amp;type=login" method="POST">
          <label>Homepage</label>
          <variable class="login" name="login_username" value-of-setting="admin_name"/>
          <variable class="password" name="password" value-of-setting="admin_password"/>
          <variable name="redirect">index.php?page=start</variable>
          <variable name="APS">ON</variable>
        </entry>
        <entry class="control-panel" dst="/index.php?page=login&amp;type=login" method="POST">
          <label>Admin Zone</label>
          <variable class="login" name="login_username" value-of-setting="admin_name"/>
          <variable class="password" name="password" value-of-setting="admin_password"/>
          <variable name="redirect">adminzone/index.php</variable>
          <variable name="APS">ON</variable>
        </entry>
      </entry-points>
    </presentation>
    <settings>
      <group class="authn">
        <name>Administrator's preferences</name>
        <setting class="login" default-value="admin" id="admin_name" max-length="32" min-length="1" regex="^[a-zA-Z][0-9a-zA-Z_\-]*" type="string">
          <name>Administrator's login</name>
          <error-message>
            Please make sure the text you entered starts with a letter
            and continues with either numbers, letters, underscores or hyphens.
          </error-message>
        </setting>
        <setting class="password" id="admin_password" type="password">
          <name>Password</name>
        </setting>
      </group>
      <group class="vcard">
        <name>Main configuration</name>
        <group class="email">
          <setting class="value" default-value="email@example.com" id="admin_email" type="email">
            <name>Administrator's email</name>
          </setting>
        </group>
        <group class="fn n">
          <setting class="title" default-value="Composr site" id="title" min-length="1" type="string">
            <name>Site name</name>
          </setting>
        </group>
      </group>
    </settings>
    <requirements>
      <php:version min="5.1.0"/>
      <!-- mysqli is needed to run the "configure" script -->
      <php:extension>mysqli</php:extension>
      <php:extension>gd</php:extension>
      <php:extension>xml</php:extension>
      <php:extension>mbstring</php:extension>
      <php:extension>curl</php:extension>
      <!-- Safe Mode must be off -->
      <php:safe-mode>false</php:safe-mode>
      <!-- Minimum 64 MiB memory -->
      <php:memory-limit>67108864</php:memory-limit>
      <!-- Minimum 5 MiB post_max_size -->
      <php:post_max_size>5242880</php:post_max_size>
      <db:db xmlns:db="http://apstandard.com/ns/1/db">
        <db:id>MAIN</db:id>
        <db:default-name>composr</db:default-name>
        <db:can-use-tables-prefix>false</db:can-use-tables-prefix>
        <db:server-type>mysql</db:server-type>
        <db:server-min-version>5.5.3</db:server-min-version>
      </db:db>
    </requirements>
